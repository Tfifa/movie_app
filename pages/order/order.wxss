
.movie_list{

width: 100%;
height: 100vh;

}

.movie{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  border-bottom: 1px solid #FAFAD2;

}

.left{
display: flex;
justify-content: center;
align-items: center;
width: 30%;

}

.center{

flex: 1;
display: flex;
flex-direction: column;
justify-content: space-around;
flex-wrap: nowrap;
font-size: 14px;
}

.center .first{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.right{
width: 20%;
display: flex;
flex-direction: column;
justify-content:flex-start;
padding: 5rpx;
}

.img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}