/**index.wxss**/


.slide-image{
  width: 100%;
  height: 150px;
}

.movie{
 width: 100%;
 height: 250rpx;
 display: flex;
 flex-direction: row;
 align-items: center;
 border: 1px solid #FAFAD2;
}
.left{
  width: 300rpx;
  height: 220rpx;
  border-radius: 5px;
  box-shadow: 2px 2px 2px #888888;
}
.center{
  box-sizing: border-box;
  padding: 10rpx;
  display: flex;
  flex-grow: 1;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
}
.right{
  height: 100%;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail{
  font-size:14px;color:gray
}

.title{
  font-size:18px;color:#052b51
}